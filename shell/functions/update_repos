function update_repos() {
    function ur_cleanup() {
        unset args count dir ext parallel repos stash total
        unset -f ur_cleanup ur_err ur_info ur_update ur_usage ur_warn
    }

    function ur_err() { echo -e "\e[31m[!] $@\e[0m"; }

    function ur_info() { echo -e "\e[32m[+] $@\e[0m"; }

    function ur_update() {
        dir="$1"
        case "$1" in
            *"archived"*) return ;;
        esac
        (
            repo="$(dirname $1)"
            \cd $repo
            if [[ -n $(git config remote.origin.url) ]]; then
                stash="$(
                    git status --porcelain | \grep -E "^[^#?]{2}"
                )"
                if [[ -n $stash ]]; then
                    ur_warn "$repo: stashing changes"
                    git stash &>/dev/null
                    if [[ $? -ne 0 ]]; then
                        ur_err "$repo: error ocurred"
                        return
                    fi
                fi

                ur_info "$repo: pulling changes"
                git pull -r &>/dev/null
                if [[ $? -ne 0 ]]; then
                    ur_err "$repo: error ocurred"
                    return
                fi

                git pull --all &>/dev/null
                if [[ $? -ne 0 ]]; then
                    ur_err "$repo: error ocurred"
                    return
                fi

                if [[ -n $stash ]]; then
                    ur_warn "$repo: restoring changes"
                    git stash pop &>/dev/null
                    if [[ $? -ne 0 ]]; then
                        ur_err "$repo: error ocurred"
                        return
                    fi
                fi
            else
                ur_warn "$repo: no remote origin"
            fi
        )
    }

    function ur_usage() {
        echo "Usage: update_repos [OPTIONS] <dir>"
        echo
        echo "Update git repos under specified directory"
        echo
        echo "Options:"
        echo "    -h, --help           Display this help message"
        echo "    -p, --parallel       Run using parallel (if"
        echo "                         installed)"
        echo "    -t, --threads=NUM    Use the specified number of"
        echo "                         threads if running in parallel"
        echo "                         (default: $threads)"
        echo
        ur_cleanup
    }

    function ur_warn() { echo -e "\e[33m[-] $@\e[0m"; }

    declare -a args
    unset dir parallel
    threads="32"

    while [[ $# -gt 0 ]]; do
        case "$1" in
            "--") shift && args+=("$@") && break ;;
            "-h"|"--help") ur_usage; return 0 ;;
            "-p"|"--parallel") parallel="true" ;;
            "-t"|"--threads"*)
                case "$1" in
                    "--"*"="*)
                        arg="${1#*=}"
                        [[ -z $arg ]] && ur_usage && return 1
                        ;;
                    *)
                        shift
                        [[ $# -eq 0 ]] && ur_usage && return 1
                        arg="$1"
                        ;;
                esac
                threads="$arg"
                ;;
            *) args+=("$1") ;;
        esac
        shift
    done
    [[ -z ${args[@]} ]] || set -- "${args[@]}"

    [[ $# -ne 1 ]] && ur_usage && return 2
    if [[ -z $(command -v git) ]]; then
        echo "git is not installed"
        return 3
    fi

    ext="zsh"
    [[ -z $BASH ]] || ext="bash"

    if [[ -n $parallel ]]; then
        if [[ -z $(command -v parallel) ]] ||
           [[ -z $(command -v env_parallel.$ext) ]]
        then
            echo "Parallel is not installed, using default behavior"
            unset parallel
        fi
    fi

    # Doesn't work with zsh right now
    [[ -n $BASH ]] || unset parallel

    declare -a repos
    repos=($(
        find -L $1 -ipath "*archived*" -prune -o -type d -name ".git" \
        2>/dev/null | \grep -iv "archived"
    ))
    let "total = ${#repos[@]}"

    if [[ $total -gt 0 ]]; then
        if [[ -n $parallel ]]; then
            source $(command -v env_parallel.$ext)
            ur_info "$total repos to update"
            env_parallel -P $threads ur_update {} ::: \
                ${repos[@]}
        else
            let "count = 1"
            for repo in "${repos[@]}"; do
                echo -e "\e[37m[$count/$total]\e[0m" >&2
                ur_update $repo
                let "count += 1"
            done; unset repo
        fi
    fi

    ur_cleanup
}

if [[ -n ${BASH_SOURCE[0]} ]]; then
    case "$0" in
        *"bash") ;;
        *) update_repos "$@" ;;
    esac
fi
